mixin-border(size = 1px, color = color-accent)
    border: size solid color
mixin-btn-transition()
    color: white;
    transition: .5s;
    background-color: color-accent
mixin-fullsize()
    width: 100%
    height: 100%
mixin-btn-hover(color = white)
    background: color;
    color: black;
mixin-flexbox()
    display: flex
    justify-content: center
    align-items: center